<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/primary_light</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="drawer_instruction" parent="AppTheme">
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:textSize">@dimen/text_size_drawer_instructions</item>
        <item name="android:background">@color/other</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_height">@dimen/margin_drawer</item>
    </style>

    <style name="title" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:padding">@dimen/padding_text_title</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title_medium" parent="title">
        <item name="android:textSize">@dimen/text_size_title_medium</item>
    </style>

    <style name="title_small" parent="title">
        <item name="android:textSize">@dimen/text_size_title_small</item>
    </style>

    <style name="button" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:padding">@dimen/padding_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
        <item name="android:background">@color/secondary</item>
    </style>

    <style name="button_small" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_button_small</item>
    </style>

    <style name="edit_text" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_edit_text</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_edit_text</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal_edit_text</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_edit_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_edit_text</item>
        <item name="android:background">#FFF</item>
    </style>

    <style name="drawer" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/margin_drawer</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:divider">@color/primary_light</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:padding">@dimen/padding_drawer</item>
    </style>

    <style name="drawer_item" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_drawer_item</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_drawer_item</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="item_item" parent="AppTheme">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:textSize">@dimen/text_size_item</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:background">@color/primary_medium</item>
    </style>

    <style name="item_headings" parent="item_item">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

</resources>
