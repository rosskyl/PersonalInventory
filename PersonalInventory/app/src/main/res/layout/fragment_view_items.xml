<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/item_headings"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_header_name"
                style="@style/item_headings"
                android:layout_height="wrap_content"
                android:text="@string/name"/>

            <ImageView
                android:id="@+id/iv_name_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:src="@drawable/ic_arrow_drop_down_white_18dp"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            style="@style/item_headings"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_header_quantity"
                style="@style/item_headings"
                android:layout_height="wrap_content"
                android:text="@string/quantity"/>

            <ImageView
                android:id="@+id/iv_quantity_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:src="@drawable/ic_arrow_drop_down_white_18dp"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            style="@style/item_headings"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_header_category"
                style="@style/item_headings"
                android:layout_height="wrap_content"
                android:text="@string/category"/>

            <ImageView
                android:id="@+id/iv_category_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:src="@drawable/ic_arrow_drop_down_white_18dp"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            style="@style/item_headings"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_header_favorite"
                style="@style/item_headings"
                android:layout_height="wrap_content"
                android:text="@string/favorite"/>

            <ImageView
                android:id="@+id/iv_favorite_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:src="@drawable/ic_arrow_drop_down_white_18dp"
                android:visibility="invisible"/>

        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"/>


</LinearLayout>