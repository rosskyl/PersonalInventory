<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.br161.personalinventory.EditItemFragment">

    <TextView
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/edit_item"/>

    <TextView
        style="@style/title_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/name"/>

    <EditText
        android:id="@+id/et_edit_name"
        style="@style/edit_text"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/hint_name"/>

    <TextView
        style="@style/title_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/category"/>

    <EditText
        android:id="@+id/et_edit_category"
        style="@style/edit_text"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/hint_category"/>

    <TextView
        style="@style/title_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/quantity"/>

    <EditText
        android:id="@+id/et_edit_quantity"
        style="@style/edit_text"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/hint_quantity"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_button_quantity_add_1"
            style="@style/button_small"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_quantity_add_1"/>

        <TextView
            android:id="@+id/tv_button_quantity_subtract_1"
            style="@style/button_small"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_quantity_subtract_1"/>

    </LinearLayout>

    <TextView
        style="@style/title_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/description"/>

    <EditText
        android:id="@+id/et_edit_description"
        style="@style/edit_text"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/hint_description"/>

    <CheckBox
        android:id="@+id/cb_edit_favorite"
        style="@style/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/favorite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_button_cancel"
            style="@style/button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_cancel"/>

        <TextView
            android:id="@+id/tv_button_submit_edit"
            style="@style/button"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_submit"/>

    </LinearLayout>

</LinearLayout>
